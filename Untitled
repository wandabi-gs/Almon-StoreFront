                        {/* Section Header */}
                        <div className="flex items-start justify-between mb-10">
                          <div className="flex items-center gap-4">
                            <div className={`p-4 rounded-2xl bg-gradient-to-br ${section.gradient}`}>
                              <section.icon className="w-8 h-8 text-white" />
                            </div>
                            <div>
                              <div className="flex items-center gap-3">
                                <span className="text-sm font-semibold px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">
                                  Section {section.index}
                                </span>
                                <span className="text-sm text-gray-500 dark:text-gray-400">
                                  {section.subtitle}
                                </span>
                              </div>
                              <h2 className="text-3xl font-bold text-gray-900 dark:text-white mt-2">
                                {section.title}
                              </h2>
                            </div>
                          </div>
                          <div className="hidden lg:block">
                            <ChevronDoubleRightIcon className="w-8 h-8 text-gray-300 dark:text-gray-600" />
                          </div>
                        </div>

                        {/* Section Content */}
                        <div className="text-gray-700 dark:text-gray-300">
                          {section.content}
                        </div>
                      </div>
                    </motion.div>
                  ))}
                </AnimatePresence>

                {/* Contact Section */}
                <motion.div
                  initial={{ opacity: 0 }}
                  whileInView={{ opacity: 1 }}
                  viewport={{ once: true }}
                  className="mb-12"
                >
                  <div className="bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600 rounded-3xl p-12 text-white">
                    <div className="max-w-3xl mx-auto text-center">
                      <h3 className="text-3xl font-bold mb-6">Data Protection Office</h3>
                      <p className="text-xl text-blue-100 leading-relaxed mb-10">
                        For privacy inquiries, data subject requests, or compliance consultations, 
                        contact our dedicated Data Protection Office.
                      </p>
                      
                      <div className="grid md:grid-cols-3 gap-8">
                        {[
                          { label: "General Inquiries", value: "dpo@almonpro.com", icon: MailIcon },
                          { label: "Emergency Contact", value: "+254 700 000 000", icon: PhoneIcon },
                          { label: "Registered Office", value: "Nairobi, Kenya", icon: MapPinIcon }
                        ].map((item, idx) => (
                          <div key={idx} className="p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
                            <div className="flex items-center justify-center w-12 h-12 rounded-xl bg-white/20 mb-4 mx-auto">
                              {item.icon && <item.icon className="w-6 h-6 text-white" />}
                            </div>
                            <div className="text-sm text-blue-200 mb-2">{item.label}</div>
                            <div className="font-bold text-lg">{item.value}</div>
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                </motion.div>

                {/* Related Documents */}
                <motion.div
                  initial={{ opacity: 0, y: 20 }}
                  whileInView={{ opacity: 1, y: 0 }}
                  viewport={{ once: true }}
                  className="bg-white dark:bg-gray-800 rounded-3xl p-10 border border-gray-200 dark:border-gray-700 shadow-2xl"
                >
                  <h3 className="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
                    Related Enterprise Documents
                  </h3>
                  
                  <div className="grid md:grid-cols-2 gap-6">
                    {[
                      {
                        title: "Master Service Agreement",
                        description: "Comprehensive terms governing enterprise engagements",
                        status: "Current v3.1",
                        color: "from-blue-500 to-cyan-500"
                      },
                      {
                        title: "Data Processing Addendum",
                        description: "GDPR-compliant data processing terms",
                        status: "GDPR Ready",
                        color: "from-purple-500 to-pink-500"
                      },
                      {
                        title: "Security Policy",
                        description: "Enterprise security controls and protocols",
                        status: "ISO 27001 Aligned",
                        color: "from-emerald-500 to-teal-500"
                      },
                      {
                        title: "Compliance Framework",
                        description: "Global regulatory compliance overview",
                        status: "Multi-jurisdiction",
                        color: "from-amber-500 to-orange-500"
                      }
                    ].map((doc, idx) => (
                      <motion.div
                        key={idx}
                        whileHover={{ scale: 1.02 }}
                        className={`bg-gradient-to-br ${doc.color} p-1 rounded-2xl`}
                      >
                        <div className="bg-white dark:bg-gray-800 rounded-xl p-6 h-full">
                          <div className="flex items-center justify-between mb-4">
                            <div className="p-3 rounded-lg bg-gray-100 dark:bg-gray-700">
                              <DocumentTextIcon className="w-6 h-6 text-gray-600 dark:text-gray-400" />
                            </div>
                            <span className="text-xs font-semibold px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-full">
                              {doc.status}
                            </span>
                          </div>
                          <h4 className="font-bold text-gray-900 dark:text-white mb-2">{doc.title}</h4>
                          <p className="text-sm text-gray-600 dark:text-gray-400 mb-4">{doc.description}</p>
                          <button className="text-sm font-semibold text-blue-600 dark:text-blue-400 hover:underline">
                            View Document ‚Üí
                          </button>
                        </div>
                      </motion.div>
                    ))}
                  </div>
                </motion.div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Footer */}
      <footer className="bg-gray-900 text-white py-12">
        <div className="max-w-7xl mx-auto px-6">
          <div className="text-center">
            <div className="flex items-center justify-center gap-3 mb-6">
              <div className="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center">
                <ShieldCheckIcon className="w-5 h-5" />
              </div>
              <span className="text-xl font-bold">AlmonPro‚Ñ¢ Enterprise</span>
            </div>
            <p className="text-gray-400 mb-8 max-w-2xl mx-auto">
              Premium industrial materials platform with enterprise-grade data governance, 
              security, and compliance frameworks.
            </p>
            <p className="text-sm text-gray-500">
              ¬© {new Date().getFullYear()} Almon Products Ltd. All rights reserved. 
              This document is proprietary and confidential.
