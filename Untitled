                      <div className="text-sm text-gray-300">Version</div>
                      <div className="font-bold">4.2.1</div>
                    </div>
                    <div className="px-6 py-3 rounded-xl bg-white/10 backdrop-blur-sm border border-white/20">
                      <div className="text-sm text-gray-300">Last Updated</div>
                      <div className="font-bold">{new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
                    </div>
                    <div className="px-6 py-3 rounded-xl bg-white/10 backdrop-blur-sm border border-white/20">
                      <div className="text-sm text-gray-300">Effective</div>
                      <div className="font-bold">Immediately</div>
                    </div>
                  </div>
                </div>
              </div>
            </motion.div>

            {/* Sidebar Navigation & Content */}
            <div className="grid lg:grid-cols-4 gap-8">
              {/* Sticky Navigation */}
              <div className="lg:col-span-1">
                <div className="sticky top-32">
                  <div className="bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 shadow-xl">
                    <h3 className="text-lg font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                      <div className="p-2 rounded-lg bg-blue-50 dark:bg-blue-900/20">
                        <DocumentTextIcon className="w-5 h-5 text-blue-600 dark:text-blue-400" />
                      </div>
                      Framework Contents
                    </h3>
                    
                    <nav className="space-y-2">
                      {sections.map((section) => (
